<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/element_liste_client_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        tools:text="id"
        />

    <TextView
        android:id="@+id/element_liste_client_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="nom"
        android:layout_alignTop="@+id/element_liste_client_id"
        android:layout_toStartOf="@+id/element_liste_client_prenom"
        android:layout_marginEnd="51dp" />

    <TextView
        android:id="@+id/element_liste_client_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="prenom"
        android:layout_alignTop="@+id/element_liste_client_nom"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/element_liste_client_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="mail"
        android:layout_alignStart="@+id/element_liste_client_id"
        android:layout_marginTop="20dp" />

</RelativeLayout>