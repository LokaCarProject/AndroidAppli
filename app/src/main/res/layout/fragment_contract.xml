    tools:context="eni.baptistedixneuf.fr.lokacarproject.fragment.contrat.ContractFragment">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragement_contrats_listView"
